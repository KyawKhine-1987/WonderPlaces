<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="100"
        android:orientation="vertical"
        tools:context=".ui.detail.WondersDetailActivity">

    <!--android:src="@{detailviewmodel.detailImage}"-->
    <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="85"
            app:srcCompat="@drawable/ic_photoloading"
            android:id="@+id/ivDetailWonders"
            android:contentDescription="@string/w"
            android:scaleType="centerCrop"/>

    <!--android:text="@{detailviewmodel.detailLocation}"-->
    <TextView
            android:text="@string/location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvDetailLocation"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:textSize="22sp"
            android:fontFamily="Roboto"
            android:textStyle="bold"
            android:typeface="normal"
            tools:text="@string/location"/>

    <!--android:text="@{detailviewmodel.detailDescription}"-->
    <TextView
            android:text="@string/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvDetailDescription"
            android:fontFamily="Roboto"
            android:typeface="normal"
            android:textSize="14sp"
            android:layout_marginTop="14dp"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            tools:text="@string/description"/>

</LinearLayout>
